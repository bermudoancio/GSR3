{% extends '::base.html.twig' %}

{% block body -%}
    <h1>PreReserva list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Horainicio</th>
                <th>Horafin</th>
                <th>Responsableresponde</th>
                <th>Responsableacepta</th>
                <th>Anulada</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('prereserva_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.horaInicio }}</td>
                <td>{{ entity.horaFin }}</td>
                <td>{{ entity.responsableResponde }}</td>
                <td>{{ entity.responsableAcepta }}</td>
                <td>{{ entity.anulada }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('prereserva_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('prereserva_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('prereserva_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
