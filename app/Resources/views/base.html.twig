<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% trans %}global.title{% endtrans %}{% endblock %}</title>
        
        {% stylesheets 'bundles/jmbermudosgr3/css/*' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        
        
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
        {% javascripts 'bundles/jmbermudosgr3/js/*' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
            
           
        {% block javascripts_block %}{% endblock %}
        
    </head>
    <body>
        
        {% include "navegation.html.twig" %}
        
        {% block body %}
            
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block content %}

            {% endblock content%}
        {% endblock body%}

        {% block javascripts %}{% endblock %}
    </body>
</html>
